@page "/vehicles"
@model VehiclesModel

<div class="container">
    <h1 class="display-4">Vehicles</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">VIN</th>
                <th scope="col">Name</th>
                <th scope="col">Color</th>
                <th scope="col">State</th>
                <th scope="col">API Version</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model.Vehicles)
            {
                <tr class="clickable-row" data-href="@Url.Page("/Vehicle", new { vehicleId = vehicle.Id })">
                    <th scope="row">@vehicle.Id</th>
                    <td>@vehicle.VehicleId</td>
                    <td>@vehicle.Vin</td>
                    <td>@vehicle.DisplayName</td>
                    <td>@vehicle.Color</td>
                    <td>@vehicle.State</td>
                    <td>@vehicle.ApiVersion</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $('.clickable-row').click(function() {
            window.location = $(this).data('href');
        });
    </script>
}
