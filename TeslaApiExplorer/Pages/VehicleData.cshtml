@page "/vehicles/{vehicleId:long}/data"
@model VehicleDataModel
@using System.Text.Json

<div class="container">
    <h1 class="display-4">@Model.VehicleData.DisplayName</h1>
    <p>Mobile Enabled: @Model.MobileEnabled</p>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-drive-tab" data-toggle="tab" href="#nav-drive" role="tab" aria-controls="nav-drive" aria-selected="true">Drive</a>
            <a class="nav-item nav-link" id="nav-climate-tab" data-toggle="tab" href="#nav-climate" role="tab" aria-controls="nav-climate" aria-selected="false">Climate</a>
            <a class="nav-item nav-link" id="nav-charge-tab" data-toggle="tab" href="#nav-charge" role="tab" aria-controls="nav-charge" aria-selected="false">Charge</a>
            <a class="nav-item nav-link" id="nav-vehicle-tab" data-toggle="tab" href="#nav-vehicle" role="tab" aria-controls="nav-vehicle" aria-selected="false">Vehicle</a>
            <a class="nav-item nav-link" id="nav-gui-tab" data-toggle="tab" href="#nav-gui" role="tab" aria-controls="nav-gui" aria-selected="false">GUI</a>
            <a class="nav-item nav-link" id="nav-conifg-tab" data-toggle="tab" href="#nav-config" role="tab" aria-controls="nav-config" aria-selected="false">Config</a>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-drive" role="tabpanel" aria-labelledby="nav-drive-tab">
            <pre>
@JsonSerializer.Serialize(Model.VehicleData.DriveState, new JsonSerializerOptions { WriteIndented = true })
            </pre>
        </div>
        <div class="tab-pane fade" id="nav-climate" role="tabpanel" aria-labelledby="nav-climate-tab">
            <pre>
@JsonSerializer.Serialize(Model.VehicleData.ClimateState, new JsonSerializerOptions { WriteIndented = true })
            </pre>
        </div>
        <div class="tab-pane fade" id="nav-charge" role="tabpanel" aria-labelledby="nav-charge-tab">
            <pre>
@JsonSerializer.Serialize(Model.VehicleData.ChargeState, new JsonSerializerOptions { WriteIndented = true })
            </pre>
        </div>
        <div class="tab-pane fade" id="nav-vehicle" role="tabpanel" aria-labelledby="nav-vehicle-tab">
            <pre>
@JsonSerializer.Serialize(Model.VehicleData.VehicleState, new JsonSerializerOptions { WriteIndented = true })
            </pre>
        </div>
        <div class="tab-pane fade" id="nav-gui" role="tabpanel" aria-labelledby="nav-gui-tab">
            <pre>
@JsonSerializer.Serialize(Model.VehicleData.GuiSettings, new JsonSerializerOptions { WriteIndented = true })
            </pre>
        </div>
        <div class="tab-pane fade" id="nav-config" role="tabpanel" aria-labelledby="nav-config-tab">
            <pre>
@JsonSerializer.Serialize(Model.VehicleData.VehicleConfig, new JsonSerializerOptions { WriteIndented = true })
            </pre>
        </div>
    </div>
</div>
