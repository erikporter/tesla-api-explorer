@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post" class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal">Login to Tesla</h1>
    <label asp-for="LoginInfo.Email" class="sr-only">Email</label>
    <input asp-for="LoginInfo.Email" class="form-control" placeholder="Email" autofocus />
    <label asp-for="LoginInfo.Password" class="sr-only">Password</label>
    <input asp-for="LoginInfo.Password" class="form-control" placeholder="Password" />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
